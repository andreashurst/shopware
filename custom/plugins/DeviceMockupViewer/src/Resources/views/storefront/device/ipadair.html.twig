{% extends "@DeviceMockupViewer/storefront/layout/base.html.twig" %}

{% block title %}iPad Air Mockup{% endblock %}

{% block stylesheets %}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    .device-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        width: 100%;
    }

    .ipad-air {
        width: 780px;
        height: 1030px;
        background: linear-gradient(145deg, #a8e6cf, #7fcdcd);
        border-radius: 42px;
        padding: 12px;
        position: relative;
        box-shadow: 
            0 0 0 3px #5fb3d3,
            0 25px 50px rgba(0, 0, 0, 0.3),
            inset 0 2px 4px rgba(255, 255, 255, 0.3);
    }

    .power-button {
        position: absolute;
        top: 150px;
        right: -3px;
        width: 6px;
        height: 60px;
        background: #5fb3d3;
        border-radius: 0 3px 3px 0;
    }

    .volume-buttons {
        position: absolute;
        top: 200px;
        left: -3px;
        width: 6px;
        height: 80px;
        background: #5fb3d3;
        border-radius: 3px 0 0 3px;
    }

    .front-camera {
        position: absolute;
        top: 20px;
        left: 50%;
        transform: translateX(-50%);
        width: 8px;
        height: 8px;
        background: #333;
        border-radius: 50%;
    }

    .screen {
        width: 100%;
        height: 100%;
        background: #000;
        border-radius: 30px;
        overflow: hidden;
        position: relative;
    }

    .screen iframe {
        width: 100%;
        height: 100%;
        border: none;
        border-radius: 30px;
    }

    @media (max-width: 900px) {
        .ipad-air {
            transform: scale(0.7);
        }
    }

    @media (max-width: 600px) {
        .ipad-air {
            transform: scale(0.5);
        }
    }
</style>
{% endblock %}

{% block content %}
<div class="device-container">
    <div class="ipad-air">
        <div class="power-button"></div>
        <div class="volume-buttons"></div>
        <div class="front-camera"></div>
        <div class="screen">
            <iframe src="{{ cleanUrl }}" title="iPad Air Mockup"></iframe>
        </div>
    </div>
</div>
{% endblock %}