{% extends "@DeviceMockupViewer/storefront/layout/base.html.twig" %}

{% block title %}iPhone 13 Mini Mockup{% endblock %}

{% block stylesheets %}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    .device-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        width: 100%;
    }

    .iphone-13-mini {
        width: 340px;
        height: 720px;
        background: linear-gradient(145deg, #a8e6cf, #7fcdcd);
        border-radius: 42px;
        padding: 6px;
        position: relative;
        box-shadow: 
            0 0 0 3px #7fcdcd,
            0 25px 50px rgba(0, 0, 0, 0.5),
            inset 0 2px 4px rgba(255, 255, 255, 0.3);
    }

    .iphone-13-mini::before {
        content: '';
        position: absolute;
        top: 50px;
        left: -3px;
        width: 6px;
        height: 50px;
        background: #7fcdcd;
        border-radius: 3px 0 0 3px;
    }

    .iphone-13-mini::after {
        content: '';
        position: absolute;
        top: 120px;
        left: -3px;
        width: 6px;
        height: 70px;
        background: #7fcdcd;
        border-radius: 3px 0 0 3px;
    }

    .power-button {
        position: absolute;
        top: 150px;
        right: -3px;
        width: 6px;
        height: 60px;
        background: #7fcdcd;
        border-radius: 0 3px 3px 0;
    }

    .screen {
        width: 100%;
        height: 100%;
        background: #000;
        border-radius: 36px;
        overflow: hidden;
        position: relative;
    }

    .notch {
        position: absolute;
        top: 8px;
        left: 50%;
        transform: translateX(-50%);
        width: 110px;
        height: 25px;
        background: #000;
        border-radius: 0 0 14px 14px;
        z-index: 100;
    }

    .screen iframe {
        width: 100%;
        height: 100%;
        border: none;
        border-radius: 36px;
    }

    @media (max-width: 480px) {
        .iphone-13-mini {
            transform: scale(0.8);
        }
    }

    @media (max-width: 360px) {
        .iphone-13-mini {
            transform: scale(0.7);
        }
    }
</style>
{% endblock %}

{% block content %}
<div class="device-container">
    <div class="iphone-13-mini">
        <div class="power-button"></div>
        <div class="screen">
            <div class="notch"></div>
            <iframe src="{{ cleanUrl }}" title="iPhone 13 Mini Mockup"></iframe>
        </div>
    </div>
</div>
{% endblock %}