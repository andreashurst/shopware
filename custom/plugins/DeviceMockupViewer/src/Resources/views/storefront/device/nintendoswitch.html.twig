{% extends "@DeviceMockupViewer/storefront/layout/base.html.twig" %}

{% block title %}Nintendo Switch Mockup{% endblock %}

{% block stylesheets %}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    .device-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        width: 100%;
    }

    .nintendo-switch {
        width: 900px;
        height: 420px;
        position: relative;
        display: flex;
        align-items: center;
        gap: 0;
    }

    .joy-con-left {
        width: 120px;
        height: 420px;
        background: linear-gradient(145deg, #3498db, #2980b9);
        border-radius: 25px 8px 8px 25px;
        position: relative;
        box-shadow: 
            0 15px 30px rgba(0, 0, 0, 0.3),
            inset 0 2px 4px rgba(255, 255, 255, 0.2);
    }

    .console {
        width: 660px;
        height: 420px;
        background: linear-gradient(145deg, #2c2c2e, #1c1c1e);
        border-radius: 8px;
        padding: 15px;
        position: relative;
        box-shadow: 
            0 15px 30px rgba(0, 0, 0, 0.4),
            inset 0 2px 4px rgba(255, 255, 255, 0.1);
    }

    .joy-con-right {
        width: 120px;
        height: 420px;
        background: linear-gradient(145deg, #e74c3c, #c0392b);
        border-radius: 8px 25px 25px 8px;
        position: relative;
        box-shadow: 
            0 15px 30px rgba(0, 0, 0, 0.3),
            inset 0 2px 4px rgba(255, 255, 255, 0.2);
    }

    .screen {
        width: 100%;
        height: 390px;
        background: #000;
        border-radius: 6px;
        overflow: hidden;
        position: relative;
    }

    .screen iframe {
        width: 100%;
        height: 100%;
        border: none;
        border-radius: 6px;
    }

    .analog-stick-left {
        position: absolute;
        top: 80px;
        left: 50%;
        transform: translateX(-50%);
        width: 40px;
        height: 40px;
        background: #333;
        border-radius: 50%;
        border: 3px solid #555;
    }

    .analog-stick-right {
        position: absolute;
        bottom: 80px;
        right: 50%;
        transform: translateX(50%);
        width: 40px;
        height: 40px;
        background: #333;
        border-radius: 50%;
        border: 3px solid #555;
    }

    .d-pad {
        position: absolute;
        bottom: 150px;
        left: 50%;
        transform: translateX(-50%);
        width: 50px;
        height: 50px;
        background: #444;
        border-radius: 8px;
    }

    .action-buttons {
        position: absolute;
        top: 150px;
        right: 50%;
        transform: translateX(50%);
        width: 50px;
        height: 50px;
        background: #444;
        border-radius: 50%;
    }

    @media (max-width: 1000px) {
        .nintendo-switch {
            transform: scale(0.8);
        }
    }

    @media (max-width: 800px) {
        .nintendo-switch {
            transform: scale(0.6);
        }
    }

    @media (max-width: 600px) {
        .nintendo-switch {
            transform: scale(0.4);
        }
    }
</style>
{% endblock %}

{% block content %}
<div class="device-container">
    <div class="nintendo-switch">
        <div class="joy-con-left">
            <div class="analog-stick-left"></div>
            <div class="d-pad"></div>
        </div>
        
        <div class="console">
            <div class="screen">
                <iframe src="{{ cleanUrl }}" title="Nintendo Switch Mockup"></iframe>
            </div>
        </div>
        
        <div class="joy-con-right">
            <div class="action-buttons"></div>
            <div class="analog-stick-right"></div>
        </div>
    </div>
</div>
{% endblock %}