{% extends "@DeviceMockupViewer/storefront/layout/base.html.twig" %}

{% block title %}Google Pixel 7 Mockup{% endblock %}

{% block stylesheets %}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    .device-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        width: 100%;
    }

    .pixel-7 {
        width: 393px;
        height: 851px;
        background: linear-gradient(145deg, #f8f9fa, #e8eaed);
        border-radius: 35px;
        padding: 6px;
        position: relative;
        box-shadow: 
            0 0 0 2px #dadce0,
            0 20px 40px rgba(0, 0, 0, 0.4),
            inset 0 1px 2px rgba(255, 255, 255, 0.8);
    }

    .pixel-7::before {
        content: '';
        position: absolute;
        top: 80px;
        left: -2px;
        width: 4px;
        height: 60px;
        background: #dadce0;
        border-radius: 2px 0 0 2px;
    }

    .pixel-7::after {
        content: '';
        position: absolute;
        top: 160px;
        left: -2px;
        width: 4px;
        height: 80px;
        background: #dadce0;
        border-radius: 2px 0 0 2px;
    }

    .power-button {
        position: absolute;
        top: 180px;
        right: -2px;
        width: 4px;
        height: 60px;
        background: #dadce0;
        border-radius: 0 2px 2px 0;
    }

    .camera-bar {
        position: absolute;
        top: 40px;
        left: 0;
        right: 0;
        height: 85px;
        background: linear-gradient(145deg, #5f6368, #3c4043);
        border-radius: 35px 35px 12px 12px;
        z-index: 50;
    }

    .camera-bump {
        position: absolute;
        top: 22px;
        right: 25px;
        width: 65px;
        height: 42px;
        background: #000;
        border-radius: 21px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
    }

    .camera-lens {
        width: 16px;
        height: 16px;
        background: #1a1a1a;
        border-radius: 50%;
        border: 2px solid #666;
    }

    .screen {
        width: 100%;
        height: 100%;
        background: #000;
        border-radius: 29px;
        overflow: hidden;
        position: relative;
        z-index: 100;
    }

    .camera-punch {
        position: absolute;
        top: 25px;
        left: 50%;
        transform: translateX(-50%);
        width: 12px;
        height: 12px;
        background: #000;
        border-radius: 50%;
        z-index: 200;
        box-shadow: 0 0 0 1px rgba(255, 255, 255, 0.1);
    }

    .screen iframe {
        width: 100%;
        height: 100%;
        border: none;
        border-radius: 29px;
    }

    @media (max-width: 480px) {
        .pixel-7 {
            transform: scale(0.7);
        }
    }

    @media (max-width: 360px) {
        .pixel-7 {
            transform: scale(0.6);
        }
    }
</style>
{% endblock %}

{% block content %}
<div class="device-container">
    <div class="pixel-7">
        <div class="camera-bar">
            <div class="camera-bump">
                <div class="camera-lens"></div>
                <div class="camera-lens"></div>
            </div>
        </div>
        <div class="power-button"></div>
        <div class="screen">
            <div class="camera-punch"></div>
            <iframe src="{{ cleanUrl }}" title="Google Pixel 7 Mockup"></iframe>
        </div>
    </div>
</div>
{% endblock %}