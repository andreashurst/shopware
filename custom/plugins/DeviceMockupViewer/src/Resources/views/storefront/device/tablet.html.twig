{% extends "@DeviceMockupViewer/storefront/layout/base.html.twig" %}

{% block title %}Tablet Mockup{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .tablet-container {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            width: 100%;
        }
        
        .tablet-mockup {
            width: 768px;
            height: 1024px;
            background-image: url('{{ asset('bundles/devicemockupviewer/Images/tablet.png') }}');
            background-size: contain;
            background-repeat: no-repeat;
            background-position: center;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .tablet-screen {
            width: 640px;
            height: 860px;
            overflow: hidden;
            border-radius: 12px;
            position: relative;
            margin-top: -10px;
        }
        
        .tablet-screen iframe {
            width: 100%;
            height: 100%;
            border: none;
            border-radius: 12px;
        }
        
        @media (max-width: 900px) {
            .tablet-mockup {
                transform: scale(0.7);
            }
        }
        
        @media (max-width: 600px) {
            .tablet-mockup {
                transform: scale(0.5);
            }
        }
        
        @media (max-width: 400px) {
            .tablet-mockup {
                transform: scale(0.4);
            }
        }
    </style>
{% endblock %}

{% block content %}
<div class="tablet-container">
    <div class="tablet-mockup">
        <div class="tablet-screen">
            <iframe src="{{ cleanUrl }}" title="Tablet Mockup"></iframe>
        </div>
    </div>
</div>
{% endblock %}