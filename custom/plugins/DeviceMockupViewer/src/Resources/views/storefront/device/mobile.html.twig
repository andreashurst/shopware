{% extends "@DeviceMockupViewer/storefront/layout/base.html.twig" %}

{% block title %}Mobile Mockup{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .mobile-container {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            width: 100%;
        }
        
        .mobile-mockup {
            width: 360px;
            height: 640px;
            background-image: url('{{ asset('bundles/devicemockupviewer/Images/mobile.png') }}');
            background-size: contain;
            background-repeat: no-repeat;
            background-position: center;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .mobile-screen {
            width: 300px;
            height: 530px;
            overflow: hidden;
            border-radius: 15px;
            position: relative;
            margin-top: -10px;
        }
        
        .mobile-screen iframe {
            width: 100%;
            height: 100%;
            border: none;
            border-radius: 15px;
        }
        
        @media (max-width: 480px) {
            .mobile-mockup {
                transform: scale(0.8);
            }
        }
        
        @media (max-width: 360px) {
            .mobile-mockup {
                transform: scale(0.7);
            }
        }
    </style>
{% endblock %}

{% block content %}
<div class="mobile-container">
    <div class="mobile-mockup">
        <div class="mobile-screen">
            <iframe src="{{ cleanUrl }}" title="Mobile Mockup"></iframe>
        </div>
    </div>
</div>
{% endblock %}