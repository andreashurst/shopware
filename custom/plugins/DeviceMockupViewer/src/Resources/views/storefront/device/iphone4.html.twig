{% extends "@DeviceMockupViewer/storefront/layout/base.html.twig" %}

{% block title %}iPhone 4 Mockup{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .iphone4-container {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            width: 100%;
        }
        
        .iphone4-mockup {
            width: 320px;
            height: 480px;
            background-image: url('{{ asset('bundles/devicemockupviewer/Images/iphone4.png') }}');
            background-size: contain;
            background-repeat: no-repeat;
            background-position: center;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .iphone4-screen {
            width: 240px;
            height: 320px;
            overflow: hidden;
            border-radius: 0;
            position: relative;
            margin-top: -15px;
        }
        
        .iphone4-screen iframe {
            width: 100%;
            height: 100%;
            border: none;
        }
        
        @media (max-width: 480px) {
            .iphone4-mockup {
                transform: scale(0.8);
            }
        }
        
        @media (max-width: 360px) {
            .iphone4-mockup {
                transform: scale(0.7);
            }
        }
    </style>
{% endblock %}

{% block content %}
<div class="iphone4-container">
    <div class="iphone4-mockup">
        <div class="iphone4-screen">
            <iframe src="{{ cleanUrl }}" title="iPhone 4 Mockup"></iframe>
        </div>
    </div>
</div>
{% endblock %}