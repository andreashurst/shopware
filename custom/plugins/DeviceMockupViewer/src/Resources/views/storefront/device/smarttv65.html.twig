{% extends "@DeviceMockupViewer/storefront/layout/base.html.twig" %}

{% block title %}65" Smart TV Mockup{% endblock %}

{% block stylesheets %}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    .device-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        width: 100%;
        flex-direction: column;
    }

    .smart-tv-65 {
        width: 1200px;
        height: 700px;
        background: linear-gradient(145deg, #1a1a1a, #0a0a0a);
        border-radius: 20px;
        padding: 15px;
        position: relative;
        box-shadow: 
            0 0 0 3px #333,
            0 25px 50px rgba(0, 0, 0, 0.5),
            inset 0 2px 4px rgba(255, 255, 255, 0.05);
    }

    .screen {
        width: 100%;
        height: 100%;
        background: #000;
        border-radius: 10px;
        overflow: hidden;
        position: relative;
    }

    .screen iframe {
        width: 100%;
        height: 100%;
        border: none;
        border-radius: 10px;
    }

    .tv-stand {
        width: 300px;
        height: 80px;
        background: linear-gradient(145deg, #2a2a2a, #1a1a1a);
        border-radius: 10px;
        margin-top: 20px;
        position: relative;
        box-shadow: 
            0 10px 20px rgba(0, 0, 0, 0.3),
            inset 0 1px 2px rgba(255, 255, 255, 0.05);
    }

    .tv-stand::before {
        content: '';
        position: absolute;
        top: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 100px;
        height: 20px;
        background: #2a2a2a;
        border-radius: 5px;
    }

    .brand-logo {
        position: absolute;
        bottom: 20px;
        right: 20px;
        color: rgba(255, 255, 255, 0.3);
        font-size: 14px;
        font-weight: bold;
        z-index: 100;
    }

    @media (max-width: 1400px) {
        .smart-tv-65 {
            transform: scale(0.8);
        }
    }

    @media (max-width: 1000px) {
        .smart-tv-65 {
            transform: scale(0.6);
        }
    }

    @media (max-width: 700px) {
        .smart-tv-65 {
            transform: scale(0.4);
        }
    }

    @media (max-width: 500px) {
        .smart-tv-65 {
            transform: scale(0.3);
        }
    }
</style>
{% endblock %}

{% block content %}
<div class="device-container">
    <div class="smart-tv-65">
        <div class="screen">
            <div class="brand-logo">SMART TV</div>
            <iframe src="{{ cleanUrl }}" title="65 Smart TV Mockup"></iframe>
        </div>
    </div>
    <div class="tv-stand"></div>
</div>
{% endblock %}