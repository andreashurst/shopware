{% extends "@DeviceMockupViewer/storefront/layout/base.html.twig" %}

{% block title %}MacBook Air Mockup{% endblock %}

{% block stylesheets %}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    .device-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        width: 100%;
    }

    .macbook-air {
        width: 900px;
        height: 580px;
        position: relative;
        perspective: 1000px;
    }

    .macbook-screen {
        width: 100%;
        height: 540px;
        background: linear-gradient(145deg, #e8e8e8, #d0d0d0);
        border-radius: 12px;
        padding: 10px;
        position: relative;
        transform: rotateX(-3deg);
        box-shadow: 
            0 0 0 2px #bbb,
            0 20px 40px rgba(0, 0, 0, 0.25),
            inset 0 1px 2px rgba(255, 255, 255, 0.8);
    }

    .screen {
        width: 100%;
        height: 100%;
        background: #000;
        border-radius: 6px;
        overflow: hidden;
        position: relative;
    }

    .screen iframe {
        width: 100%;
        height: 100%;
        border: none;
        border-radius: 6px;
    }

    .macbook-base {
        width: 102%;
        height: 70px;
        background: linear-gradient(145deg, #e8e8e8, #d0d0d0);
        border-radius: 0 0 15px 15px;
        position: absolute;
        bottom: -35px;
        left: 50%;
        transform: translateX(-50%);
        box-shadow: 
            0 8px 25px rgba(0, 0, 0, 0.2),
            inset 0 1px 2px rgba(255, 255, 255, 0.8);
    }

    .trackpad {
        width: 120px;
        height: 80px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 6px;
        position: absolute;
        bottom: 12px;
        left: 50%;
        transform: translateX(-50%);
        border: 1px solid rgba(0, 0, 0, 0.1);
    }

    @media (max-width: 1000px) {
        .macbook-air {
            transform: scale(0.8);
        }
    }

    @media (max-width: 800px) {
        .macbook-air {
            transform: scale(0.6);
        }
    }

    @media (max-width: 600px) {
        .macbook-air {
            transform: scale(0.4);
        }
    }
</style>
{% endblock %}

{% block content %}
<div class="device-container">
    <div class="macbook-air">
        <div class="macbook-screen">
            <div class="screen">
                <iframe src="{{ cleanUrl }}" title="MacBook Air Mockup"></iframe>
            </div>
        </div>
        <div class="macbook-base">
            <div class="trackpad"></div>
        </div>
    </div>
</div>
{% endblock %}