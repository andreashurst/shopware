{% extends "@DeviceMockupViewer/storefront/layout/base.html.twig" %}

{% block title %}Tablet Landscape Mockup{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .tabletlandscape-container {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            width: 100%;
        }
        
        .tabletlandscape-mockup {
            width: 1024px;
            height: 768px;
            background-image: url('{{ asset('bundles/devicemockupviewer/Images/tabletlandscape.png') }}');
            background-size: contain;
            background-repeat: no-repeat;
            background-position: center;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .tabletlandscape-screen {
            width: 860px;
            height: 640px;
            overflow: hidden;
            border-radius: 12px;
            position: relative;
            margin-top: -10px;
        }
        
        .tabletlandscape-screen iframe {
            width: 100%;
            height: 100%;
            border: none;
            border-radius: 12px;
        }
        
        @media (max-width: 1100px) {
            .tabletlandscape-mockup {
                transform: scale(0.8);
            }
        }
        
        @media (max-width: 900px) {
            .tabletlandscape-mockup {
                transform: scale(0.6);
            }
        }
        
        @media (max-width: 600px) {
            .tabletlandscape-mockup {
                transform: scale(0.4);
            }
        }
    </style>
{% endblock %}

{% block content %}
<div class="tabletlandscape-container">
    <div class="tabletlandscape-mockup">
        <div class="tabletlandscape-screen">
            <iframe src="{{ cleanUrl }}" title="Tablet Landscape Mockup"></iframe>
        </div>
    </div>
</div>
{% endblock %}